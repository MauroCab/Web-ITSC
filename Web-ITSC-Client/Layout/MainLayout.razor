        <NavMenu Role="@ServicioRol.ObtenerRol()" />
    </div>

    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="https://localhost:7262/swagger" target="_blank">
                <span class="bi bi-engranaje-nav-menu" aria-hidden="true"></span> Swagger
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
